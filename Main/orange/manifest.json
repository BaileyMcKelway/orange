{
  "name": "Orange",
  "description": "Voice recognition-enabled Google Chrome Extension to automatically scroll your web pages.",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "128": "img/orange.png"
  },
  "offline_enabled": false,
  "browser_action": {
    "default_icon": "img/orange.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": { "scripts": ["background.js"] },
  "options_page": "permission.html",
  "permissions": ["tabs", "*://*/*", "<all_urls>", "activeTab", "storage"]
}
